#!/bin/bash -eu
samtools sort -@ ${cpus} -ni -O sam -T . ${bam} \
  | rsem-calculate-expression --sam \
                          --estimate-rspd  \
                          --calc-ci \
                          --no-bam-output \
                          --seed 12345 \
                          -p ${cpus} \
                          --ci-memory ${memory} \
                          --forward-prob 0 \
                          tmp_query_sorted.bam \
                          ${quantRef}/RSEMref \
                          ${prefix}

rsem-plot-model ${prefix} ${prefix}.pdf
